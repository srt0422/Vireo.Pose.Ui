{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "sourceMap": true
  },
  "files": [
    "./*.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./node_modules/@types/**/*.ts",
    "./__tests__/*.ts",
    "./__tests__/*.tsx"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./node_modules/@types/**/*.ts",
    "./__tests__/*.ts",
    "./__tests__/*.tsx"
  ],
  "typeRoots": [ "node_modules/@types" ]
}
